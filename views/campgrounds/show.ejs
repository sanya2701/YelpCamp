<% include ../partials/header %> 

<div class="container">
  <div class="row">
      <div class="col-md-3">
          <p class="lead">YelpCamp</p>
          <div class="list-group">
              <li class="list-group-item active"><b>Author: </b><%= camp.author.username %></li>
              <li class="list-group-item">Info 2</li>
              <li class="list-group-item">Info 3</li>
          </div>
      </div>
      <div class="col-md-9">
          <div class="thumbnail">
              <img class="img-responsive" src="<%= camp.image %>">
              <div class="caption-full">
                  <h4 style="float:right">$9.00/night</h4>
                  <h4><a href=""><%=camp.name%></a></h4>
                  <p><%= camp.desc %></p>
              </div>

              <% if(currentUser && camp.author.id.equals(currentUser._id)){ %>
              <a class="btn btn-warning" href="/campgrounds/<%= camp._id %>/edit">Edit</a>
              <form style="display:inline" action = "/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
               <button class="btn btn-danger">Delete</button>
              </form>
              <% } %>
          </div>
          <div class="well">
              <div class="text-right">
                  <a class="btn btn-success" href="/campgrounds/<%= camp._id %>/comments/new">Add New Comment</a>
              </div>
              <hr>
              <% camp.comments.forEach(function(comment){ %>
                  <div class="row">
                      <div class="col-md-12">
                          <strong><%= comment.author.username %></strong>
                          <span class="pull-right">10 days ago</span>
                          <p>
                              <%= comment.comm %> 
                          </p>
                      </div>
                  </div>
              <% }) %>
          </div>
      </div>
  </div>
</div>

<% include ../partials/footer %> 

